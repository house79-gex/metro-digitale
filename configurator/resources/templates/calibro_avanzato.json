{
  "name": "Calibro Avanzato",
  "description": "Calibro con funzioni avanzate: min/max, tolleranze, puntali",
  "version": "1.0.0",
  "elements": [
    {
      "type": "Label",
      "id": "title",
      "x": 200,
      "y": 15,
      "width": 400,
      "height": 35,
      "properties": {
        "text": "Calibro Avanzato",
