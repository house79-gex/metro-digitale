    {
      "type": "NumberInput",
      "id": "tolerance_input",
      "x": 320,
      "y": 345,
      "width": 180,
      "height": 40,
      "properties": {
        "label": "Tolleranza:",
        "min": 0.0,
        "max": 10.0,
        "step": 0.5,
        "default": 2.0,
        "unit": "mm"
      }
    },
    {
      "type": "Button",
      "id": "btn_back",
      "x": 50,
      "y": 410,
      "width": 120,
      "height": 50,
      "properties": {
        "text": "‚Üê Indietro",
